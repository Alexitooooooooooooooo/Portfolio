---
interface ContactInfo {
  email: string;
  phones: string[];
}

interface Props {
  contact: ContactInfo;
}

const { contact } = Astro.props;
---

<section class="space-y-6">
  <h2 class="text-3xl font-bold text-white flex items-center gap-3 mt-6">
    Contacto
    <div class="h-px bg-zinc-800 flex-grow ml-4"></div>
  </h2>
  <div class="flex flex-wrap gap-3 pt-2">
    <a 
      href={`mailto:${contact.email}`} 
      class="flex items-center gap-2 px-4 py-1.5 bg-portfolio-panel border border-white/5 text-portfolio-accent text-sm font-mono rounded-lg hover:bg-portfolio-accent/10 transition-colors cursor-default"
    >
      <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
        <rect width="20" height="16" x="2" y="4" rx="2"></rect>
        <path d="m22 7-8.97 5.7a1.94 1.94 0 0 1-2.06 0L2 7"></path>
      </svg>
      {contact.email}
    </a>
    {contact.phones.map(phone => (
      <a 
        href={`tel:${phone}`} 
        class="flex items-center gap-2 px-4 py-1.5 bg-portfolio-panel border border-white/5 text-portfolio-accent text-sm font-mono rounded-lg hover:bg-portfolio-accent/10 transition-colors cursor-default"
      >
        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"></path>
        </svg>
        {phone}
      </a>
    ))}
  </div>
</section>
