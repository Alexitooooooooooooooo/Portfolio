---
interface Props {
  name: string;
  role: string;
}

const { name, role } = Astro.props;
---

<section class="space-y-6">
  <h1 class="text-6xl font-extrabold text-transparent bg-clip-text bg-gradient-to-r from-teal-300 via-cyan-400 to-blue-500 tracking-tighter pb-2">
    {name}
  </h1>
  <p class="text-2xl text-portfolio-muted font-light max-w-2xl leading-relaxed">
    {role}
  </p>
</section>
