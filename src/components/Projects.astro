---
interface Tech {
  name: string;
  icon?: string;
}

interface Project {
  title: string;
  desc: string;
  tags: string[];
  url?: string;
}

interface Props {
  projects: Project[];
  techStack: Tech[];
}

const { projects, techStack } = Astro.props;
---

<section class="space-y-6">
  <h2 class="text-3xl font-bold text-transparent bg-clip-text bg-gradient-to-r from-teal-400 to-blue-500">Proyectos</h2>
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
    {projects.map(project => (
      <div class="group relative p-6 bg-portfolio-panel border border-white/5 rounded-2xl hover:border-portfolio-accent/30 transition-all duration-300 hover:shadow-2xl hover:shadow-portfolio-accent/10 overflow-hidden">
        <div class="absolute inset-0 bg-gradient-to-br from-portfolio-accent/5 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>
        <h3 class="font-bold text-xl text-white mb-2 relative z-10 group-hover:text-portfolio-accent transition-colors">
          {project.title}
        </h3>
        <p class="text-sm text-portfolio-muted mb-4 leading-relaxed relative z-10">
          {project.desc}
        </p>
        <div class="flex flex-wrap gap-2 relative z-10 mb-4">
          {project.tags.map(techName => {
            const techInfo = techStack.find(t => t.name === techName);
            return (
              <span class="flex items-center gap-1.5 px-2 py-1 text-[10px] font-mono text-cyan-300 bg-cyan-900/20 rounded border border-cyan-800/30 uppercase tracking-widest">
                {techInfo?.icon && <img src={techInfo.icon} alt={techName} class="w-3 h-3 opacity-90" loading="lazy" />}
                {techName}
              </span>
            );
          })}
        </div>
        {project.url && (
          <a 
            href={project.url} 
            target="_blank" 
            rel="noopener noreferrer" 
            class="inline-flex items-center gap-2 px-4 py-2 text-sm font-bold text-white bg-portfolio-panel border border-white/10 rounded-lg hover:bg-portfolio-accent hover:text-portfolio-bg transition-all duration-300 relative z-10"
          >
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="M18 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6"></path>
              <polyline points="15 3 21 3 21 9"></polyline>
              <line x1="10" y1="14" x2="21" y2="3"></line>
            </svg>
          </a>
        )}
      </div>
    ))}
  </div>
</section>
